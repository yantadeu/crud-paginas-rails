<p id="notice"><%= notice %></p>

<h2>Configurações de Páginas</h2>

<table  class="table table-default">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Keywords</th>
<!--      <th>Pagina</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configuracao_paginas.each do |configuracao_pagina| %>
      <tr>
        <td><%= configuracao_pagina.title %></td>
        <td><%= configuracao_pagina.description %></td>
        <td><%= configuracao_pagina.keywords %></td>
<!--        <td><%#= link_to configuracao_pagina.pagina.name, edit_pagina_path(configuracao_pagina.pagina), :class => 'btn-link' %></td>-->
        <td><%= link_to 'Editar', edit_configuracao_pagina_path(configuracao_pagina), :class => 'btn btn-info white' %></td>
        <td><%= link_to 'Remover', configuracao_pagina, method: :delete, data: { confirm: 'Você tem certeza?' }, :class => 'btn btn-danger white' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Configuração de Página', new_configuracao_pagina_path, :class => 'btn btn-primary white' %>
